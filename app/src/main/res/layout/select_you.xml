<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#20b2aa"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="Select"
        android:textColor="#ae6456"
        android:textSize="40dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="I am a"
        android:textColor="#000"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/textView18" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView18"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="34dp"
        android:layout_toStartOf="@+id/textView18"
        android:src="@drawable/m" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/imageView9"
        android:layout_toEndOf="@+id/textView18"
        android:src="@drawable/fe"
        android:id="@+id/imageView10" />

    <EditText
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="37dp"
        android:layout_toStartOf="@+id/textView16"
        android:gravity="center"
        android:hint="Profession"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView9"
        android:layout_below="@+id/imageView9"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="Religion"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView19"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignEnd="@+id/imageView10"
        android:gravity="center"
        android:text="Ethnicity"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignBaseline="@+id/textView22"
        android:layout_alignBottom="@+id/textView22"
        android:layout_alignEnd="@+id/textView21"
        android:gravity="center"
        android:hint="Age"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ea94ff"
        android:text="Continue"
        android:textColor="#ffff"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView22"
        android:layout_marginTop="53dp" />
</RelativeLayout>