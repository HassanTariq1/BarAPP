<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <RelativeLayout
        android:background="#7abbff"
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:src="@drawable/lock"
            android:id="@+id/imageView11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView11"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:textColor="#000"
            android:background="#ffff"
            android:text="Everthing Unlocked !"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/textView20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView20"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="#ffff"
            android:text="It only take a step to start a new journey"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lin"
        android:layout_below="@+id/rel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:src="@drawable/playy"/>
        <ImageView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:src="@drawable/payy"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="     1
Month "
    android:textSize="40sp"
    android:textStyle="bold"
    android:textColor="#000"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="122dp"
            android:src="@drawable/mon"
            android:id="@+id/imageView12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="     1
Month "
            android:textColor="#000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/imageView12"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
           android:text="Get Premium Now"
            android:textColor="#fff"

            android:background="@drawable/rounded"/>
    </RelativeLayout>
</RelativeLayout>