<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#20b2aa"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.mughal.barapp.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/an" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:text="Your Love lift my soul from body to sky."
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="italic" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:src="@drawable/fbc" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginBottom="15dp"
        android:src="@drawable/aii" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/imageView6"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/at" />


    <ImageView

        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/imageView5"
        android:layout_alignParentBottom="true"
        android:src="@drawable/al" />




</RelativeLayout>
