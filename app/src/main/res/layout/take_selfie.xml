<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#20b2aa"

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="TAKE SELFIE TO PROCEED "
        android:textSize="30sp"
        android:id="@+id/textView3" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
  android:layoutMode="clipBounds"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:textColor="#000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="SHOW US YOURSELF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="#000"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="16dp"
            android:text="We take our Users security very seriously. Please take a second to verify your identity by sending us a selfie."
            android:textSize="20sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"

            android:layout_height="50dp"
            android:textColor="#ffff"
            android:layout_above="@+id/button2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:background="@color/colorPrimary"
            android:text=" Verify Now" />

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#ffff"


            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button"
            android:text=" Remind Later"
            android:id="@+id/button2" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#000"
        android:textColor="#ffff"
        android:textSize="15dp"
        android:text="This Photo will be only used for identification purposes and vever posted to your profile " />



</RelativeLayout>